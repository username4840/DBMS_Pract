-- Create the main table
CREATE TABLE StudInfo (
    roll_no NUMBER,
    name VARCHAR2(20),
    address VARCHAR2(50),
    class VARCHAR2(20),
    attendence NUMBER
);

-- Insert records
INSERT INTO StudInfo VALUES (1, 'Mack', 'New York', 'T.E.', 50);
INSERT INTO StudInfo VALUES (2, 'Jack', 'USA', 'T.E.', 40);
INSERT INTO StudInfo VALUES (3, 'Arina', 'Egypt', 'T.E.', 80);
INSERT INTO StudInfo VALUES (4, 'Maxxy', 'Thailand', 'T.E.', 60);
INSERT INTO StudInfo VALUES (5, 'Wednesday', 'Europe', 'T.E.', 90);

-- Add new column for grade
ALTER TABLE StudInfo ADD grade VARCHAR2(2);

-- Update grades
UPDATE StudInfo SET grade = 'A+' WHERE roll_no = 5;
UPDATE StudInfo SET grade = 'A'  WHERE roll_no = 1;
UPDATE StudInfo SET grade = 'O'  WHERE roll_no = 2;
UPDATE StudInfo SET grade = 'A+' WHERE roll_no = 3;
UPDATE StudInfo SET grade = 'A'  WHERE roll_no = 4;

-- Commit changes
COMMIT;

-- Create a view
CREATE OR REPLACE VIEW data AS
SELECT * FROM StudInfo;

-- Display the view data
SELECT * FROM data;

-- Create table with auto-generated roll_no (Oracle 12c+ feature)
CREATE TABLE StudentInfo1 (
    roll_no NUMBER GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    name VARCHAR2(10)
);

-- Insert sample records
INSERT INTO StudentInfo1 (name) VALUES ('ABC');
INSERT INTO StudentInfo1 (name) VALUES ('PQR');
INSERT INTO StudentInfo1 (name) VALUES ('XYZ');
INSERT INTO StudentInfo1 (name) VALUES ('MNO');

-- Commit inserts
COMMIT;

-- Display final data
SELECT * FROM StudInfo;
SELECT * FROM StudentInfo1;

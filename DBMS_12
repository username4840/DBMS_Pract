# *** 12th Practical ***.
import mysql.connector

# Step 1: Establish connection
mydb = mysql.connector.connect(
    host="localhost",
    user="root",
    password="your_password",   # replace with your MySQL password
    database="student_db"
)
print("‚úÖ Database Connection Successful!")

# Step 2: Create a cursor
cur = mydb.cursor()

# Step 3: Create table
cur.execute("""
CREATE TABLE IF NOT EXISTS student(
    id INT PRIMARY KEY,
    name VARCHAR(50),
    course VARCHAR(50)
)
""")
print("‚úÖ Table Created Successfully!")

# Step 4: Insert record (Add)
cur.execute("INSERT INTO student VALUES (1, 'Tushar', 'Computer Engineering')")
cur.execute("INSERT INTO student VALUES (2, 'Mayur', 'IT')")
mydb.commit()
print("‚úÖ Records Added Successfully!")

# Step 5: Display records
print("\nüìã Current Student Records:")
cur.execute("SELECT * FROM student")
for row in cur.fetchall():
    print(row)

# Step 6: Update record (Edit)
cur.execute("UPDATE student SET course='AI & DS' WHERE id=1")
mydb.commit()
print("\n‚úèÔ∏è Record Updated Successfully!")

# Step 7: Delete record
cur.execute("DELETE FROM student WHERE id=2")
mydb.commit()
print("üóëÔ∏è Record Deleted Successfully!")

# Step 8: Final display
print("\nüìò Final Student Records:")
cur.execute("SELECT * FROM student")
for row in cur.fetchall():
    print(row)

# Step 9: Close connection
mydb.close()
print("\nüîí Connection Closed Successfully!")
